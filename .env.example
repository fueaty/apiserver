# 智能体工作流API服务环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=智能体工作流API服务
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=2

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_MAX_CONNECTIONS=10

# MongoDB配置
MONGO_USERNAME=your_mongo_username_here
MONGO_PASSWORD=your_mongo_password_here
MONGO_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@localhost:27017/
MONGO_DB=your_database_name

# 加密配置
ENCRYPTION_PASSWORD=your_encryption_password_here
SIGNATURE_SECRET=your_signature_secret_here

# Docker Compose配置
# 用于docker-compose.yml中的环境变量替换
# 复制此文件为.env并填写实际值

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/intelligent-agent-api/app.log

# 速率限制
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 采集配置
COLLECTION_TIMEOUT=10
COLLECTION_MAX_RETRIES=3

# 发布配置
PUBLICATION_TIMEOUT=15
PUBLICATION_MAX_RETRIES=3

# 异步任务配置
ASYNC_TASK_TIMEOUT=300
ASYNC_TASK_RETRY_COUNT=3
ASYNC_TASK_RETRY_DELAY=60

# Flower监控配置（可选）
FLOWER_USER=admin
FLOWER_PASSWORD=password

# 平台认证信息（根据实际平台配置）
ZHIHU_ACCESS_TOKEN=
WEIBO_ACCESS_TOKEN=
JUEJIN_ACCESS_TOKEN=
XIAOHONGSHU_ACCESS_TOKEN=
WECHAT_PUBLIC_ACCESS_TOKEN=
TOUTIAO_ACCESS_TOKEN=