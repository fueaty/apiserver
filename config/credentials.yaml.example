# 配置文件：API服务器凭证与密钥配置
# 注意：请复制此文件为credentials.yaml并填写真实配置，credentials.yaml不会被提交到版本控制系统中

# 飞书配置
feishu:
  # 飞书应用ID - 用于API身份验证
  app_id: "your_feishu_app_id_here"
  # 飞书应用密钥 - 用于API身份验证
  app_secret: "your_feishu_app_secret_here"
  # 飞书多维表格配置
  tables:
    # 头条数据表格配置
    headlines:
      name: "AI Headlines Pipeline"
      app_token: "your_headlines_app_token_here"
      table_id: "your_headlines_table_id_here"
    # AI洞察档案表格配置
    ai_insights:
      name: "AI Insights Archive"
      app_token: "your_ai_insights_app_token_here"
      table_id: "your_ai_insights_table_id_here"
    # 内容分发追踪表格配置
    distribution:
      name: "Content Distribution Tracker"
      app_token: "your_distribution_app_token_here"
      table_id: "your_distribution_table_id_here"
    # 平台管理表格配置
    platform_configs:
      name: "Platform Management"
      app_token: "your_platform_configs_app_token_here"
      table_id: "your_platform_configs_table_id_here"
    # 内容选择规则表格配置
    content_selection:
      name: "Content Selection Rules"
      app_token: "your_content_selection_app_token_here"
      table_id: "your_content_selection_table_id_here"
    # 数据源配置表格
    data_sources:
      name: "Data Sources Configuration"
      app_token: "your_data_sources_app_token_here"
      table_id: "your_data_sources_table_id_here"
    # 内容发布任务表格配置
    publish_tasks:
      name: "Content Publishing Tasks"
      app_token: "your_publish_tasks_app_token_here"
      table_id: "your_publish_tasks_table_id_here"
    # 内容质量监控表格配置
    content_evaluation:
      name: "Content Quality Monitoring"
      app_token: "your_content_evaluation_app_token_here"
      table_id: "your_content_evaluation_table_id_here"

# 企业微信配置
wework:
  # 企业微信机器人webhook - 用于发送通知
  webhook: 'https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_wework_webhook_key_here'

# JWT配置
jwt:
  # JWT签名密钥 - 用于生成和验证JSON Web Token
  secret_key: "your_jwt_secret_key_here_please_make_it_secure_and_random"
